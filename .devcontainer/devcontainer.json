{
  "name": "Fullstack React + Node.js Development (Podman Only)",
  "dockerComposeFile": "podman-compose.yml",
  "service": "frontend",
  "workspaceFolder": "/workspace",
  "runServices": ["frontend", "backend"],


  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": {
      "label": "React Frontend",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Node.js Backend API", 
      "onAutoForward": "notify"
    }
  },
  
  // Additional port forwarding for Podman
  "otherPortsAttributes": {
    "3000": {
      "label": "React Frontend",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Node.js Backend API",
      "onAutoForward": "notify"
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "cd frontend && npm install && cd ../backend && npm install",

  // Use 'postStartCommand' to run commands after the container starts
  "postStartCommand": "cd frontend && npm run build",

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      },
      "extensions": [
        // "esbenp.prettier-vscode",
        // "dbaeumer.vscode-eslint",
        // "bradlc.vscode-tailwindcss",
        // "ms-vscode.vscode-typescript-next",
        // "formulahendry.auto-rename-tag",
        // "christian-kohler.path-intellisense",
        // "ms-vscode.vscode-json",
        // "ms-vscode.vscode-node-debug2",
        // "ms-vscode.js-debug-nightly",
        // "rangav.vscode-thunder-client"
      ]
    }
  },

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "root",

  // Set environment variables
  "containerEnv": {
    "NODE_ENV": "development",
    "REACT_APP_API_URL": "http://localhost:3001"
  },

  // Additional configuration for Podman
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],

  // Port forwarding configuration
  "appPort": [3000, 3001],
  "overrideCommand": false
}
